<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/root_layout"
    android:padding="16dp">

    <!-- Title: INVOICE -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="INVOICE"
        android:textStyle="bold"
        android:textSize="24sp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="16dp"/>

    <!-- Frame 1: Order ID and Date -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="16dp">

        <!-- Order ID -->
        <TextView
            android:id="@+id/text_order_id"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Order ID: "
            android:textStyle="bold" />

        <!-- Order Date -->
        <TextView
            android:id="@+id/text_order_date"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Date: " />
    </LinearLayout>

    <!-- Horizontal Line -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/black"
        android:layout_marginBottom="16dp" />

    <!-- Frame 2: Order To -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="16dp">

        <!-- Order To -->
        <TextView
            android:id="@+id/text_order_to"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Order To:"
            android:textStyle="bold" />

        <!-- Order To Name -->
        <TextView
            android:id="@+id/text_order_to_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Name: " />

        <!-- Order To Address -->
        <TextView
            android:id="@+id/text_order_to_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Address: " />

        <!-- Order To Mobile Number -->
        <TextView
            android:id="@+id/text_order_to_mobile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mobile Number: " />
    </LinearLayout>

    <!-- Horizontal Line -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/black"
        android:layout_marginBottom="16dp" />

    <!-- Frame 3: Item Details -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/item_details_layout"
        android:layout_marginBottom="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <!-- Item -->
            <TextView
                android:id="@+id/text_item"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Item"
                android:textStyle="bold" />

            <!-- Quantity -->
            <TextView
                android:id="@+id/text_quantity"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Quantity"
                android:textStyle="bold" />

            <!-- Cost -->
            <TextView
                android:id="@+id/text_cost"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Cost"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

    <!-- Horizontal Line -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/black"
        android:layout_marginBottom="16dp" />

    <!-- Frame 4: Total Cost -->
    <TextView
        android:id="@+id/text_total_cost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Total Cost: "
        android:textStyle="bold" />

    <!-- Print Button -->
    <Button
        android:id="@+id/buttonPrint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Print Invoice"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="16dp"/>

</LinearLayout>