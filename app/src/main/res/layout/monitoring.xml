<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".Monitoring">


    <TextView
        android:id="@+id/airQualityTitle"
        android:layout_width="227dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/airQualityGauge"
        android:layout_alignParentStart="true"
        android:layout_marginStart="100dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="100dp"
        android:text="Air Quality Level"
        android:textSize="18sp"
        android:textStyle="bold" />

    <com.example.orderpage.GasGaugeView
        android:id="@+id/airQualityGauge"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="70dp"
        android:layout_marginTop="20dp" />

    <TextView
        android:id="@+id/hydrogenSulphideTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hydrogen Sulphide Level"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_alignParentEnd="true"
        android:layout_below="@id/hydrogenSulphideGauge"
        android:layout_marginEnd="75dp"
        android:layout_marginTop="10dp"/>

    <!-- Hydrogen Sulphide Gauge -->

    <!-- Ammonia Title -->

    <com.example.orderpage.GasGaugeView
        android:id="@+id/hydrogenSulphideGauge"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="250dp"
        android:layout_marginEnd="87dp" />



    <TextView
        android:id="@+id/ammoniaTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ammoniaGauge"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="115dp"
        android:text="Ammonia Level"
        android:textSize="18sp"
        android:textStyle="bold" />

    <com.example.orderpage.GasGaugeView
        android:id="@+id/ammoniaGauge"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="480dp"
        android:layout_marginEnd="90dp" />

</RelativeLayout>
