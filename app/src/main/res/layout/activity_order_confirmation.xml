<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/logbg"
    android:padding="16dp">

    <TextView
        android:id="@+id/confirmationText"
        android:layout_width="395dp"
        android:layout_height="47dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="296dp"
        android:layout_marginEnd="0dp"
        android:text="YOUR ORDER IS PLACED SUCCESSFULLY!!!"
        android:textColor="@color/brown"
        android:textSize="14sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/totalCostTextView"
        android:layout_width="276dp"
        android:layout_height="75dp"
        android:layout_below="@id/orderTableLayout"
        android:layout_alignParentStart="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="44dp"
        android:layout_marginTop="444dp"
        android:text="Total Cost: â‚¹0"
        android:textColor="#000000"
        android:textSize="28sp"
        android:textStyle="bold" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/orderTableLayout">

        <!-- Header Row -->
        <TableRow>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Item Name"
                android:layout_marginLeft="5dp"
                android:textColor="@color/blue"
                android:textStyle="bold"
                android:paddingEnd="16dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/blue"
                android:text="Quantity"
                android:layout_marginLeft="17dp"
                android:textStyle="bold"
                android:paddingEnd="16dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/blue"
                android:layout_marginLeft="36dp"
                android:text="Cost"
                android:textStyle="bold" />
        </TableRow>

        <!-- Dynamically add rows for each item -->
        <!-- This will be populated programmatically -->

    </TableLayout>



    <Button
        android:id="@+id/gohome"
        android:layout_width="221dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="48dp"
        android:layout_marginBottom="36dp"
        android:backgroundTint="@color/pink"
        android:text="Back to Home Page"
        android:textColor="#ffffff"
        android:textSize="18sp" />

</RelativeLayout>
